<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlanesActivity">

        <RelativeLayout
            android:id="@+id/menu_search_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/daco_app_string"
                android:textColor="@color/_bg_App_color"
                android:textSize="35sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/rectangle_shape">

            <TextView
                android:id="@+id/Mission_manifest"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Mission Manifest"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="340dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_box_shape"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/add_plane"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/AddPlane"
                    android:src="@drawable/add_icon" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/planes_view"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/rectangle_shape">

            <ListView
                android:id="@+id/planes_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/text_color"
                android:dividerHeight="1sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/bumpPlanBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="700dp"
            android:background="@drawable/loginbox_shape"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:text="Bump Plan"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>